    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImageMan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        tools:srcCompat="@drawable/ic_person_black_24dpaa"></ImageView>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="2dp"

                        android:gravity="center"
                        android:text="Name"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/ImgEmail"
                        android:layout_marginLeft="2dp"
                        tools:srcCompat="@drawable/ic_email_black_24dp"
                        android:layout_height="40dp"></ImageView>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:textSize="15dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Email  " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImagePhone"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:srcCompat="@drawable/ic_phone_black_24dp"></ImageView>

                   <TextView
                        android:id="@+id/tvMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:text="Mobile No"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgCompany"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:srcCompat="@drawable/ic_work_black_24dp"></ImageView>


                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="Company"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgStore"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        tools:srcCompat="@drawable/ic_store_black_24dp"></ImageView>
                    <TextView
                        android:id="@+id/tvstore"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:text="Store"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgDoj"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        tools:srcCompat="@drawable/ic_date_range_black_24dp"></ImageView>
                    <TextView
                        android:id="@+id/tvDOJ"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:text="DOJ"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:elevation="55dp"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <Button
                            android:id="@+id/btnpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_design"
                            android:padding="10dp"
                            android:text="Change Password"
                            android:textColor="@color/color6"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:id="@+id/tvSignout"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="Signout"
                    android:text="Sign out"

                    android:textColor="@color/color2"
                    android:textStyle="bold"
                    tools:ignore="OnClick">

                </TextView>
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>