<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/color3"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Today sell"
                    android:textSize="20sp"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"

                    android:id="@+id/saleDash"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/color5"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dvr_black_24dp"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Scheme"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/Schemedash"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:onClick="chekcattendce"
            android:id="@+id/chekcattendce"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                app:cardCornerRadius="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                app:cardBackgroundColor="@color/color5"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_book_black_24dp"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Attendance"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:onClick="Checkattnd"
                    android:id="@+id/Checkattnd"
                    android:textStyle="bold"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"

                android:layout_alignParentTop="true"
                app:cardCornerRadius="3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                app:cardBackgroundColor="@color/color3"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Top Sell"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/dadhsale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:inputType="textMultiLine"
                    android:text="N.A."
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/lastmonthcardview"

            app:cardCornerRadius="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/color3"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_trending_up_24px"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Last Month Earning"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:id="@+id/lastmonttect"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/earigi"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:inputType="textMultiLine"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            app:cardCornerRadius="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="3dp"
                android:layout_marginRight="0dp"
                app:cardBackgroundColor="@color/color5"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search_black_24dp"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Present"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/TvAbsent"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/cardmargin"
            app:cardCornerRadius="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="3dp"
                android:layout_marginRight="0dp"
                app:cardBackgroundColor="@color/color5"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    android:layout_height="40dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Margin"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    android:textColor="@color/color9"
                    android:textStyle="bold"
                    android:id="@+id/tvmargiin"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/TvMarign"
                    android:textSize="18sp"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>